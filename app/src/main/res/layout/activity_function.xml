<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="#1BBC9B"
    tools:context="main.java.com.termux.activity.FunctionActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="欢迎来到实验室"
                android:textColor="#fff"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/sms"
                android:background="#1BBC9B"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sms_img"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="短信读取试验功能[自动运行]\n[使用此功能必须打开短信息权限]"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="配合'XINHAO_HAN_Sms'来使用,轻触单击生成'XINHAO_HAN_Sms'文件，在[/usr/bin/目录下] \n使用命令可能获取的短信息不是很全,\n所以执行完命令之后在[/usr/tmp/sms.xh]保存着\n注意！多执行几次命令,直到有短信息出现为止! "
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/sms_img"

                    android:layout_centerVertical="true"
                    android:src="@drawable/duanxin_fun"
                    android:layout_height="60dp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/welcome_String"
                android:background="#1BBC9B"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/wenhou"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="修改启动问候语"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以修改启动问候语"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/wenhou"
                    android:layout_centerVertical="true"
                    android:src="@drawable/wenhou"
                    android:layout_height="40dp" />


            </RelativeLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/start_commd"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/kaiji"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="增加开机启动命令[ 新增 ]"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以修改开机命令"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/shape_dian"
                    android:layout_alignParentRight="true"
                    android:id="@+id/red"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/kaiji"
                    android:layout_centerVertical="true"
                    android:src="@drawable/kaiji"
                    android:layout_height="40dp" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/list_String"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/xiazai"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="修改下载源"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以修改下载源"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/xiazai"
                    android:layout_centerVertical="true"
                    android:src="@drawable/xiugaiyuan"
                    android:layout_height="40dp" />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/list_main"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/guanfang"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="一键切换到官方源"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以一键切换到官方源"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/guanfang"
                    android:layout_centerVertical="true"
                    android:src="@drawable/guanfang"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />
            <RelativeLayout
                android:id="@+id/list_qinghua"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/qinghua"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="一键切换到清华源"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以一键切换到清华源"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/qinghua"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qinghua"
                    android:layout_height="40dp" />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/install_userland"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/ubuntu_user"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="安装userlAnd旗下系统[aarch64][目前趋于稳定]"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以安装userlAnd操作系统,注意需要挂载VPN,否则很可能会下载错误!关闭系统时，请退出termux,\n只支持ubuntu安装,和群的离线恢复包，其他系统就不弄了，多而不精，群离线恢复包中有桌面，恢复之后直接就能用"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/ubuntu_user"
                    android:layout_centerVertical="true"
                    android:src="@drawable/xiazaixitong"
                    android:layout_height="40dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/quanxian_xiufu"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/xiufu"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="修复操作系统权限"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="轻触以修复操作系统权限[将修复所有文件!]"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/xiufu"
                    android:layout_centerVertical="true"
                    android:src="@drawable/xiufusitong"
                    android:layout_height="40dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff" />



        </LinearLayout>


    </ScrollView>


</LinearLayout>
